{
  "name": "flowlens",
  "version": "0.1.0",
  "description": "Developer-focused debugging and tracing desktop application",
  "main": "./out/main/index.js",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "prepare:electron": "node ./scripts/ensure-electron-binary.js",
    "build:web-sdk": "npm run build --workspace @flowlens/web",
    "start": "npm run prepare:electron && electron-vite preview",
    "dev": "npm run build:web-sdk && npm run prepare:electron && electron-vite dev",
    "build": "npm run build:web-sdk && npm run typecheck && npm run prepare:electron && electron-vite build",
    "postinstall": "electron-builder install-app-deps && npm run prepare:electron",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "uuid": "^11.1.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@types/node": "^22.13.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^34.2.0",
    "electron-builder": "^25.1.8",
    "electron-vite": "^3.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.4.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.7.3",
    "vite": "^6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amoreX/flowlens.git"
  },
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ]
}
